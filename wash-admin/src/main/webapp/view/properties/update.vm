<script type="text/javascript" src="#getJsPath('properties.js')"></script>


<div class="row">
	<div class="col-md-12">
		<!-- Begin: 新增用户-->
		<div class="portlet light">
			<div class="portlet-title">
				<div class="caption">
					<span class="caption-subject font-green-sharp bold uppercase">
						#foreach($navi in $navigator.getItems()) 
						#if($navi.last == true)
						$navi.name 
						#end 
						#end
						<!-- 新增产品类型 -->
					</span> <span class="caption-helper hide"></span>
				</div>
				<div class="actions btn-set">
					<a class="btn btn-default btn-circle" href="javascript:;"
						onclick="history.back()"><i class="fa fa-chevron-circle-left"></i>
						返回</a>
				</div>
			</div>
			<div class="portlet-body form">
				<!-- BEGIN FORM-->
				<form action="" id="form_submit" class="form-horizontal">
					<div class="form-body">
						<div class="form-group">
							<label class="col-md-3 control-label"><span
								style="color: red">*</span>名称：</label>
							<div class="col-md-4" style="color: red">
								<input type="text" class="form-control" name="name" id="name"
									placeholder="请输入用户名1-16位" autofocus="autofocus" value="$!properties.name">
								<input type="hidden" name="id" id="id" value="$!properties.id">
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-3 control-label"><span
								style="color: red">*</span>值：</label>
							<div class="col-md-4" style="color: red">
								<input type="text" class="form-control" name="value" id="value"
									placeholder="请输入值1-256" value="$!properties.value"> <span class="help-block hide"></span>
							</div>
						</div>
						<div class="form-group">
					<label class="col-md-3 control-label">
					               描述：</label>						
							<div class="col-md-4" style="color: red">
								<input type="text" class="form-control" name="description" id="description"
									placeholder="请输入描述1-128位" value="$!properties.description"> <span class="help-block hide"></span>
							</div>
						</div>
						
					</div>
					<div class="form-actions">
						<div class="row">
							<div class="col-md-offset-3 col-md-9">
								<a href="javascript:;" class="btn default"
									onclick="history.back()"><i
									class="fa fa-chevron-circle-left"></i> 返回</a>
								<button type="reset" class="btn default">
									<i class="fa fa-close"></i> 重置
								</button>
								<button type="submit" class="btn btn-primary" id="bt_submit"
									onclick="update()">
									<i class="fa fa fa-check"></i> 提交
								</button>
							</div>
						</div>
					</div>
				</form>
				<!-- END FORM-->
			</div>

		</div>
		<!-- End: 新增产品类型 -->
	</div>
</div>
<!-- END PAGE CONTENT-->

<!-- END CONTENT -->

 